{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2022-02-14",
    "name": "ouh_linux_vm_v2",
    "location": "uksouth",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "AzureImageBuilderLinuxSIG",
        "userIdentity": "enabled"
    },
    "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
            "<imgBuilderId>": {}
        }
    },
    "properties": {
        "buildTimeoutInMinutes": 180,
        "vmProfile": {
            "vmSize": "Standard_D4s_v5",
            "hyperVGeneration": "V2"
        },
        "source": {
            "type": "PlatformImage",
            "publisher": "Canonical",
            "offer": "0001-com-ubuntu-server-jammy",
            "sku": "22_04-lts-gen2",
            "version": "latest"
        },
        "customize": [
            {
                "type": "File",
                "name": "VMInitScript",
                "sourceUri": "https://<scriptStorageAcc>.blob.core.windows.net/<scriptStorageAccContainer>/linux/scripts/init_vm.sh",
                "destination":"/tmp/init_vm.sh"
            },
            {
                "type": "Shell",
                "name": "setupVM",
                "inline": [
                    "cd /tmp",
                    "chmod +x init_vm.sh",
                    "sudo /tmp/init_vm.sh"
                ]
            }
        ],
        "distribute": [
            {
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "ubuntu2204-gen2"
                },
                "replicationRegions": ["uksouth"],
                "storageAccountType": "Standard_LRS"
            }
        ]
    }
}
